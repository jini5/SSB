<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.bitcoinproject.mapper.MemberMapper">
    <insert id="insertMember" parameterType="HashMap">
        INSERT INTO member
            (
                email
                ,password
                ,name
                ,phone
                ,address
                ,detail
            )
            VALUES
            (
                #{email}
                ,#{password}
                ,#{name}
                ,#{phone}
                ,#{address}
                ,#{addressDetail}
            )
    </insert>

    <select id="loginMember" parameterType="HashMap" resultType="HashMap">
        SELECT
            email
             ,name
             ,phone
             ,address
             ,detail

        FROM
            member
        where
            email=#{email}
            and
            password=#{password}

    </select>

    <select id="hadBalance" resultType="int" >
        SELECT
            SUM(amount)
        FROM
            payment
        WHERE
            email=#{email}
    </select>

    <select id="havingBalance" parameterType="String" resultType="HashMap">

        select
            coinId
             ,sum(amount) smount
        from
            buy
        where email =#{email}  group by coinId

    </select>

    <select id="moneyBalance" parameterType="String" resultType="int">

        SELECT (
                       IFNULL((SELECT SUM(amount) FROM payment WHERE email = #{email}),0) -
                       IFNULL((SELECT SUM(total) FROM buy WHERE email = #{email}),0)
                   ) rest
        FROM DUAL
    </select>
</mapper>